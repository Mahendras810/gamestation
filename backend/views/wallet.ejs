<%- include("partials/header", { title: 'My Wallet' }) %>

<div class="container mt-5">
  <% if (success_msg) { %>
    <div class="alert alert-success"><%= success_msg %></div>
  <% } %>
  <% if (error_msg) { %>
    <div class="alert alert-danger"><%= error_msg %></div>
  <% } %>

  <h2><i class="fas fa-wallet me-2"></i> My Wallet</h2>

  <div class="row">
    <!-- Wallet Info and Actions -->
    <div class="col-md-5">
      <div class="card mb-4">
        <div class="card-body">
          <p><strong>User:</strong> <%= user.username %></p>
          <p><strong>Current Balance:</strong> ₹<%= Number(wallet.balance).toFixed(2) %></p>

          <!-- Deposit Button -->
          <button class="btn btn-success w-100 my-2" onclick="window.location.href='/payment/deposit'">
            <i class="fas fa-plus-circle me-1"></i> Add Money
          </button>

          <!-- Withdraw Button -->
          <button class="btn btn-danger w-100" onclick="document.getElementById('withdrawForm').style.display='block'">
            <i class="fas fa-minus-circle me-1"></i> Withdraw
          </button>

          <!-- Withdraw Form (Hidden initially) -->
          <form id="withdrawForm" action="/wallet/withdraw" method="POST" class="mt-3" style="display:none;">
            <div class="input-group">
              <input type="number" step="0.01" name="amount" class="form-control" placeholder="Enter amount" required>
              <button type="submit" class="btn btn-danger">Submit</button>
            </div>
          </form>
        </div>
      </div>

      <a href="/dashboard" class="btn btn-secondary">← Back to Dashboard</a>
    </div>

    <!-- Transaction History -->
    <div class="col-md-7">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Transaction History</h5>
        </div>
        <div class="card-body p-0">
          <table class="table table-bordered mb-0">
            <thead class="table-light">
              <tr>
                <th>Type</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% if (transactions && transactions.length > 0) { %>
                <% transactions.forEach(tx => { %>
                  <tr>
                    <td><%= tx.type %></td>
                    <td>₹<%= Number(tx.amount).toFixed(2) %></td>
                    <td><%= tx.description %></td>
                    <td><%= new Date(tx.createdAt).toLocaleString() %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">No transactions yet.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <% if (transactions && transactions.length >= limit || page > 1) { %>
        <div class="text-center mt-3">
          <% if (page > 1) { %>
            <a href="/wallet?page=<%= page - 1 %>" class="btn btn-outline-secondary me-2">Previous</a>
          <% } %>
          <% if (transactions.length === limit) { %>
            <a href="/wallet?page=<%= page + 1 %>" class="btn btn-outline-secondary">Next</a>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
