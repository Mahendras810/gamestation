<%- include("partials/header", { title: title }) %>

<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 bg-dark text-white" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-3">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="GameStation Logo" style="height: 60px;" />
      </a> 
      <h3 class="mt-2 text-warning">Player Login</h3>
    </div>
    <form action="/login" method="POST">
      <div class="mb-3">
        <input type="email" name="email" class="form-control" placeholder="Email" required />
      </div>
      <div class="mb-3">
        <input type="password" name="password" class="form-control" placeholder="Password" required />
      </div>
      <button type="submit" class="btn btn-warning w-100">Login</button>
    </form>
    <div class="text-center mt-3">
      <p>New user? <a href="/register" class="text-info">Create account</a></p>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
